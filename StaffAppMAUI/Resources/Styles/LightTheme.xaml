    <Style TargetType="Slider">
        <Setter Property="ThumbColor" Value="{StaticResource AccentColor}" />
    </Style>

    <Style TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{StaticResource AccentColor}" />
    </Style>

    <Style x:Key="SwitchStyle-iOS" TargetType="Switch">
        <Setter Property="OnColor" Value="{StaticResource AccentColor}" />
    </Style>

    <Style x:Key="SwitchStyle-Android" TargetType="Switch">
        <Setter Property="ThumbColor" Value="{StaticResource AccentColor}" />
    </Style>

    <Style TargetType="Switch">
        <Style.BasedOn>
            <OnPlatform x:TypeArguments="Style">
                <On Platform="iOS" Value="{StaticResource SwitchStyle-iOS}" />
                <On Platform="Android" Value="{StaticResource SwitchStyle-Android}" />
            </OnPlatform>
        </Style.BasedOn>
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="VerticalOptions" Value="CenterAndExpand" />
        <Setter Property="HorizontalOptions" Value="End" />
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="{StaticResource AccentColor}" />
    </Style>

    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource BackgroundThemeColor}" />
        <Setter Property="BarTextColor" Value="{StaticResource TextThemeColor}" />
    </Style>

    <Style x:Key="StyleFontNormal" TargetType="Label">
        <Setter Property="FontFamily" Value="AvenirRegular" />
        <Setter Property="TextColor" Value="{StaticResource TextThemeColor}" />
        <Setter Property="FontSize" Value="13" />
    </Style>

    <Style x:Key="StyleFontMedium" TargetType="Label">
        <Setter Property="FontFamily" Value="AvenirHeavy" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light=#1C1B1F, Dark=#E6E1E5}" />
        <Setter Property="FontSize" Value="13" />
    </Style>

    <Style x:Key="StyleFontMediumCheck" TargetType="CheckBox">
        <Setter Property="Color" Value="#552E5D" />
    </Style>

    <Style x:Key="StyleFontMediumdx" TargetType="dxe:TextEdit">
        <Setter Property="TextFontFamily" Value="AvenirRegular" />
        <Setter Property="TextColor" Value="{StaticResource TextThemeColor}" />
    </Style>

    <Style x:Key="StyleFontMediumPassworddx" TargetType="dxe:PasswordEdit">
        <Setter Property="TextFontFamily" Value="AvenirRegular" />
    </Style>

    <Style x:Key="StyleFontBold" TargetType="Label">
        <Setter Property="FontFamily" Value="AvenirBlack" />
        <Setter Property="TextColor" Value="{StaticResource TextThemeColor}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="dxco:SimpleButton" x:Key="commandButtonStyle">
        <Setter Property="TextColor" Value="{StaticResource TextThemeColorReverse}"/>
        <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}"/>
    </Style>

    <Style TargetType="dxco:SimpleButton" x:Key="cardButtonStyle">
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="TextColor" Value="{StaticResource TextThemeColor}"/>
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundThemeColor}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="18"/>
        <Setter Property="Shadow">
            <Setter.Value>
                <OnPlatform x:TypeArguments="Shadow">
                    <On Platform="iOS">
                        <On.Value>
                            <Shadow Brush="{StaticResource ShadowBrushiOS}" Radius="8" />
                        </On.Value>
                    </On>
                    <On Platform="Android">
                        <On.Value>
                            <Shadow Brush="{StaticResource ShadowBrushAndroid}" Radius="8" />
                        </On.Value>
                    </On>
                </OnPlatform>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="StyleFeedbackdx" TargetType="dxdf:DataFormView">
        <Setter Property="EditorLabelColor" Value="{StaticResource TextThemeColor}"/>
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundThemeColor}"/>
    </Style>

